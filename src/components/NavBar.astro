---
const links = [
  { href: "#about", label: "About" },
  { href: "#experience", label: "Experience" },
  { href: "#projects", label: "Projects" },
  { href: "#contact", label: "Contact" },
];
---
<nav class="sticky top-0 z-50 backdrop-blur border-b border-white/5 bg-[--color-bg]/70">
  <div class="section nav">
    <a href="#contact" class="btn nav-cta hidden sm:inline-flex">Let’s talk</a>
    <ul class="nav-links">
      {links.map(l => (
        <li><a href={l.href} class="nav-link">{l.label}</a></li>
      ))}
    </ul>

    <a href="#contact" class="nav-cta hidden sm:inline-flex">Let’s talk</a>
  </div>
</nav>
