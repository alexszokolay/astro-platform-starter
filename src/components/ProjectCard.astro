---
const { title, year, desc, tags = [], link } = Astro.props;
---
<a href={link} target={link ? "_blank" : undefined} rel={link ? "noopener" : undefined} class="block group">
  <div class="card h-full">
    <div class="flex items-center justify-between">
      <h3 class="text-lg font-semibold group-hover:underline">{title}</h3>
      <span class="text-xs text-white/60">{year}</span>
    </div>
    <p class="mt-2 text-white/80">{desc}</p>
    {tags.length ? (
      <div class="mt-3 flex flex-wrap gap-2">
        {tags.map(t => <span class="text-xs px-2 py-1 rounded-full border border-white/10 text-white/80">{t}</span>)}
      </div>
    ) : null}
  </div>
</a>
