---
const { role, company, date, location, bullets = [] } = Astro.props;
---
<article class="card">
  <header class="flex flex-wrap items-baseline justify-between gap-2">
    <h3 class="text-lg font-semibold">{role} · <span class="text-white/80">{company}</span></h3>
    <div class="text-sm text-white/60">{date} · {location}</div>
  </header>
  <ul class="mt-3 list-disc pl-5 space-y-2 text-white/85">
    {bullets.map(b => <li>{b}</li>)}
  </ul>
</article>
